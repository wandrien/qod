)

*/

void OutputTree(word P; int Pad; char @LinePrefix)

	if P >= nNODE then
		OutputTree_Prefix(Pad , @LinePrefix);
		EmitString("0");
		return;
	end

	if Pad < 0 then
		EmitString("(");
		OutputNodeName(P);
		EmitString(" ");
		OutputNodeValue(P);
		EmitString(" ");
		OutputTree(Node[P].pLeft , Pad, "");
		EmitString(" ");
		OutputTree(Node[P].pRight, Pad, "");
		EmitString(")");
		return;
	end

/*
	if 1 = 1 then
		OutputTree_Prefix(Pad    , @LinePrefix); EmitString("("); OutputNodeName(P);
		OutputTree_Prefix(Pad + 1, @LinePrefix); OutputNodeValue(P);
		OutputTree(Node[P].pLeft , Pad + 1, @LinePrefix);
		OutputTree(Node[P].pRight, Pad + 1, @LinePrefix);
		OutputTree_Prefix(Pad    , @LinePrefix); EmitString(")");
		return
	end
*/

	OutputTree_Prefix(Pad, @LinePrefix);

	word Deep = NodeDeep(P);
	if Deep < 3 then
		OutputTree(P, -1, "");
		return;
	end


	EmitString("(");

	do
		word RightList = IDDesc[Node[P].ID].RightList;
/*
		word RightList = 0;
		if Node[P].ID = iPUSH then
			RightList = 1;
		end
*/
		OutputNodeName(P);
		EmitString(" "); OutputNodeValue(P);
		OutputTree(Node[P].pLeft , Pad + 1, @LinePrefix);

		if RightList = 0 then
			OutputTree(Node[P].pRight, Pad + 1, @LinePrefix);
			exit;
		end

		P = Node[P].pRight;
		if P >= nNODE then
			exit;
		end

		OutputTree_Prefix(Pad, @LinePrefix);
		EmitString("*");
	end

	OutputTree_Prefix(Pad, @LinePrefix);
	EmitString(")");

end


void OutputFunctionTrees()

	InitializeIDDesc();

	char @LinePrefix = "; ";

	word I = 0;
	while I < nDict do
		select
			case Dict[I].Class = cFUNC & Dict[I].Sub != sSYS & Dict[I].Used != 0:
				EmitNL();
				EmitString(@LinePrefix);
				EmitString("== ");
				EmitString(@GetDictName(I));
				EmitString(" ");
				word j = strlen(@GetDictName(I));
				while j < 74 do
					EmitString("=");
					inc j;
				end
				EmitNL();
				EmitString(@LinePrefix);
				OutputTree(Dict[I].pNode, 0, @LinePrefix);
		end
		inc I;
	end

end


void OutputIncludeList()
	word i = 0;
	while i < nDict do
		select
		case Dict[i].Class = cFILE:
			EmitStringNL(@GetDictName(i));
		end:select
		inc i;
	end

end

word NodeDeep(word P)

	if P >= nNODE then
		return 0;
	end

	word D1 = NodeDeep(Node[P].pLeft);
	word D2 = NodeDeep(Node[P].pRight);

	if D2 > D1 then
		D1 = D2;
	end

	return D1 + 1;
end

void OutputNodeName(word P)
	char @N = @IDDesc[Node[P].ID].Name;
	if @N = NULL then
		@N = @str(Node[P].ID);
	end
	EmitString(@N);
end

void OutputNodeValue(word P)
	char @N;
	select
		case IDDesc[Node[P].ID].ValueClass = vcParm:
			@N = @Parm[Node[P].Value].Name;
		case IDDesc[Node[P].ID].ValueClass = vcDict:
			@N = @GetDictName(Node[P].Value);
		default:
			@N = @str(Node[P].Value);
	end:select
	EmitString(@N);
end

void OutputTree_Prefix(int Pad; char @LinePrefix)

	if Pad < 0 then
		EmitChar(' ');
		return;
	end

	EmitNL();
	EmitString(@LinePrefix);
	int i = 0;
	while i < Pad do
		EmitChar(' ');
		inc i;
	end
end



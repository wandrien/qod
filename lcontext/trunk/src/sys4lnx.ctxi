void     puts(char @St)
  word   N=0;
  while  St[N]!=#0 do
    inc  N;
  end

  inline $B8, $04, $00, $00, $00;           // mov     EAX,   4
  inline $BB, $01, $00, $00, $00;           // mov     EBX,   1
  inline $8B, $4D, $08;                     // mov     ECX,  [EBP+ 8]
  inline $8B, $55, $FC;                     // mov     EDX,  [EBP- 4]
  inline $CD, $80;                          // int     80H
end



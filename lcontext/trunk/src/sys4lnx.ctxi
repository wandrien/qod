  inline $B8, $04, $00, $00, $00;           // mov     EAX,   4
  inline $8B, $5D, $08;                     // mov     EBX,  [EBP+ 8]
  inline $8B, $4D, $0C;                     // mov     ECX,  [EBP+12]
  inline $8B, $55, $10;                     // mov     EDX,  [EBP+16]
  inline $CD, $80;                          // int     80H
end


void     close(word F)
  inline $B8, $06, $00, $00, $00;           // mov     EAX,   6
  inline $8B, $5D, $08;                     // mov     EBX,  [EBP+ 8]
  inline $CD, $80;                          // int     80H

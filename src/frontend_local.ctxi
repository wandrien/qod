
char @LocalGetName(word I)
	when I >= nLocal:
		StopInternal(__FILE__, __LINE__);
	return @Char[Local[I].Name2];
end

word ResolveLocal(char @Name)
	word  I=0;
	while I<nLocal do
		when strcmp(@LocalGetName(I),@Name) == 0:
			return I;
		inc I;
	end:while
	return nLOCAL;
end


word ResolveParm(char @Name)
	word pARGS = FindInNamespace("args", pFunc);
	when pARGS >= nDICT:
		StopInternal(__FILE__, __LINE__);
	return FindInNamespace(@Name, pARGS);
end


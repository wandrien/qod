bool str_eq(char @S1; char @S2)
	if strcmp(@S1, @S2) == 0 then
		return true;
	end
	return false;
end

/*****************************************************************************/

bool str_ne(char @S1; char @S2)
	if strcmp(@S1, @S2) == 0 then
		return false;
	end
	return true;
end

/*****************************************************************************/

bool str_has_prefix(char @S; char @Prefix)
	word i = 0;
	while Prefix[i] != #0 do
		if S[i] != Prefix[i] then
			return false;
		end:if
		inc i;
	end:while
	return true;
end

/*****************************************************************************/

bool str_has_suffix(char @S; char @Suffix)
	word l1 = strlen(@S);
	word l2 = strlen(@Suffix);
	if l1 < l2 then
		return false;
	end
	return str_eq(@S[l1 - l2], @Suffix);
end

/*****************************************************************************/


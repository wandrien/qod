// TEST: should_print 'abc'

include "../include/test_env.qdi";

struct XX of
	char @Buff;
end

void set_char(char @pCh; char Value) of
	pCh = Value;
end

word foo(XX @xx; word I; char Value) of
	set_char(@xx.Buff[I], Value);
	return I;
end

word foo2(XX @xx; word I; char Value) of
	@xx.Buff[I] = char(Value);
	return I;
end

word main() of
	char Buff[100];
	XX xx;
	@xx.Buff = @Buff;

	foo(@xx, 5, 'a');
	putc(xx.Buff[5]);
	foo(@xx, 5, 'b');
	putc(xx.Buff[5]);
	foo2(@xx, 5, 'c');
	putc(xx.Buff[5]);

	return 0;
end

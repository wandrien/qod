// TEST: should_print '42 OK1 OK2 OK3 OK4 '

include "../sys4lnx.ctxi"
include "../include/hosted.ctxi"

word A = 42;
word B = 0;

begin
	word @p = @A;
	puts(@str(p)); puts(" ");
	uintptr a1 = uintptr(@A);
	uintptr a2 = uintptr(@p);
	uintptr b1 = uintptr(@B);

	word w_a1 = word(a1);
	word w_a2 = word(a2);

	when w_a1 == w_a2:
		puts("OK1 ");

	when a1 == a2:
		puts("OK2 ");

	when b1 - a1 == 4: /* FIXME: use sizeof() */
		puts("OK3 ");

	when b1 > a1:
		puts("OK4 ");

end

// TEST: should_print '10 -10 10 -10 10 -10 '

include "../include/test_env.qdi";

void f1() of
	uint8 a1 = 10;
	int8 a2 = as_signed(a1);
	a1 = as_unsigned(-a2);
	int8 a3 = as_signed(a1);
	put_int(a2); puts(" ");
	put_int(a3); puts(" ");

	when typeof(as_signed(a1)) != int8:
		puts("OOPS ");
	when typeof(as_unsigned(as_signed(a1))) != uint8:
		puts("OOPS ");
end

